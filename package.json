{
  "name": "opencode-session-memory",
  "version": "0.1.0",
  "description": "Automatically index OpenCode sessions into a sqlite-vec vector database for semantic search across your AI coding history",
  "type": "commonjs",
  "main": "dist/src/indexer.js",
  "types": "dist/src/indexer.d.ts",
  "bin": {
    "opencode-session-memory": "./dist/src/cli.js"
  },
  "files": [
    "dist/",
    "plugin/",
    "skill/"
  ],
  "scripts": {
    "build": "tsc && chmod 755 dist/src/cli.js dist/mcp/index.js",
    "build:watch": "tsc --watch",
    "start:mcp": "node dist/mcp/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "opencode",
    "mcp",
    "sqlite-vec",
    "vector",
    "memory",
    "ai",
    "sessions"
  ],
  "author": "Denis Jannot <djannot@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@opencode-ai/plugin": "^1.2.8",
    "@opencode-ai/sdk": "^1.2.8",
    "better-sqlite3": "^11.9.1",
    "openai": "^4.20.1",
    "sqlite-vec": "0.1.7-alpha.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.3.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
